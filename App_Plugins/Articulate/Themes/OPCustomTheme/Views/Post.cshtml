                            <span>
                                Posted by <span class="postby_author">
                                    <!-- Author Name -->
                                    @if (!Model.Author.Url.IsNullOrWhiteSpace())
                                    {
                                        <a href="@Model.Author.Url">@Model.Author.Name</a>
                                    }
                                    else
                                    {
                                        @Model.Author.Name
                                    }
                                </span> on
                            </span>
                            <!-- Date Format e.g 23 February 2015 - 05:42pm -->
                            <time datetime="@Model.PublishedDate.ToString("yyyy-MM-dd")">
                                @Model.PublishedDate.ToString("dd MMMM yyyy - hh:mm tt")
                            </time>
                        </div>

