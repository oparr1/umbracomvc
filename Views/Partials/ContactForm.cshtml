@using MvcUmbraco.Models
@inherits UmbracoViewPage<ContactModel>

@{
    Layout = null;
}

@using (Html.BeginUmbracoForm("ContactForm", "ContactSurface", FormMethod.Post, new { id = "contact" }))
{
    <div class="submitmessagewrapper">
        @if (TempData["noticeOne"] != null)
        {
            <div class="submitsuccess"><h2>@TempData["noticeOne"]</h2></div>
        }
        @if (TempData["noticeTwo"] != null)
        {
            <div class="submitfailed"><h2>@TempData["noticeTwo"]</h2></div>
        }
    </div>

    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="contacttooltips">
            @Html.LabelFor(model => model.FirstName, new { @class = "required" })
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
    </div>
    <div class="form-group">
        <div class="contacttooltips">
            @Html.LabelFor(model => model.LastName, new { @class = "required" })
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
    </div>
    <div class="form-group">
        <div class="contacttooltips">
            @Html.LabelFor(model => model.CEmail, new { @class = "required" })
            @Html.EditorFor(model => model.CEmail)
            @Html.ValidationMessageFor(model => model.CEmail)
        </div>
    </div>
    <div class="form-group">
        <div class="contacttooltipstextarea">
            @Html.LabelFor(model => model.Message, new { @class = "required" })
            @Html.TextAreaFor(model => model.Message)
            @Html.ValidationMessageFor(model => model.Message)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
}
